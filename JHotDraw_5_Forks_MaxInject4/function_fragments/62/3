    protected void write(String content) throws IOException {
        if (content == null) {
            return;
        }
       int size = content.length();
        if (tempChars == null || tempChars.length < size) {
            tempChars = new char[size];
        }
        content.getChars(0, size, tempChars, 0);
        write(tempChars, 0, size);
    }
