    private void writeInfoHeader(int headerSize,
                                 int bitsPerPixel) throws IOException {
        // size of header
        stream.writeInt(headerSize);

        // width
        stream.writeInt(w);

        // height
        stream.writeInt(isTopDown ? -h : h);

        // number of planes
        stream
.writeShort(1);

        // Bits Per Pixel
        stream.writeShort(bitsPerPixel);
    }
